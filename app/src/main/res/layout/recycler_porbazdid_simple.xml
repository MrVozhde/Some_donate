<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="130dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="@dimen/margin_3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/fragment_background_color"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_3dp"
        android:layout_height="130dp">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:background="@drawable/image_porbazdid_border"
            android:id="@+id/img_item_pic_recycler_id"
            android:layout_height="80dp"/>

        <TextView
            android:layout_width="0dp"
            android:text="amin"
            android:id="@+id/txt_item_name_recycler_id"
            android:layout_alignLeft="@id/img_item_pic_recycler_id"
            android:layout_alignRight="@id/img_item_pic_recycler_id"
            android:textColor="#021aee"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>